    <!-- Add function popup -->
    <div class="popup">
        <div class="popup_content" id="popup_add">
            <a href="/menu" class="popup_close" onclick="closeForm('add')">&times;</a>
            <form action="/menu/add" method="POST" enctype="multipart/form-data" class="formContainer" id="menuFormAdd">
                <h3 class="heading">Thêm vào menu</h3>
                <p class="desc">Growing in Generosity ❤️</p>
                <div class="form-group">
                    <label for="name" class="form-label">Tên món ăn</label>
                    <input id="name" name="name" type="text" class="form-control" required>
                    <span class="form-message"></span>
                </div>
                <div class="form-group">
                    <label for="category" class="form-label">Danh mục</label>
                    <select id="category" name="category" class="form-control" required>
                        <option value="">-- Chọn danh mục --</option>
                        <option value="Khai vị">Khai vị</option>
                        <option value="Món chính">Món chính</option>
                        <option value="Tráng miệng">Tráng miệng</option>
                        <option value="Đồ uống">Đồ uống</option>
                    </select>
                    <span class="form-message"></span>
                </div>
                <div class="form-group">
                    <label for="description" class="form-label">Mô tả</label>
                    <input id="description" name="description" type="text" class="form-control">
                    <span class="form-message"></span>
                </div>
                <div class="form-group">
                    <label for="image" class="form-label">Hình ảnh</label>
                    <input id="image" name="image" type="file" accept="image/*" class="form-control">
                    <span class="form-message"></span>
                </div>
                <button type="submit" class="form-submit">Thêm món</button>
                <button type="button" class="cancel" onclick="closeForm('add')">Hủy</button>
            </form>
        </div>
    </div>

    <!-- Delete function popup -->
    <div class="popup">
        <div class="popup_content" id="popup_delete">
            <a href="/menu" class="popup_close" onclick="closeForm('delete')">&times;</a>
            <form id="deleteForm" action="/menu/delete" method="POST">
                <h3 class="heading">Bạn có chắc muốn xóa món ăn?</h3>
                <input type="hidden" id="deleteItemId" name="foodId" value="">
                <button type="submit" class="form-submit">Đồng ý</button>
                <button type="button" class="cancel" onclick="closeForm('delete')">Hủy</button>
            </form>
        </div>
    </div>

    <!-- Edit function popup -->
    <div class="popup">
        <div class="popup_content" id="popup_edit">
            <a href="/menu" class="popup_close" onclick="closeForm('edit')">&times;</a>
            <form action="/menu/edit" method="POST" enctype="multipart/form-data" class="form" id="menuFormEdit">
                <h3 class="heading">Chỉnh sửa món ăn</h3>
                <p class="desc">Growing in Generosity ❤️</p>
                <input type="hidden" id="foodId" name="foodId" value="">
                <div class="form-group">
                    <label for="name" class="form-label">Tên món ăn</label>
