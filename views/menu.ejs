    <link rel="icon" type="image/png" href="/images/homepages/logo.png">
    <link rel="shortcut icon" type="image/x-icon" href="/images/homepages/logo.png">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
        integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />

</head>

<body>
    <div id="overlay"></div>
    <section id="Home">

        <nav>
            <div class="logo">
                <a href="/" class="logo-link">
                    <img src="/images/homepages/logo.png" alt="Karma Kitchen Logo">
                </a>
                <h2 class="site-title">
                    <a href="/">
                        <%= title %>
                    </a>
                </h2>
            </div>

            <ul class="nav-links">
                <li><a href="/">Trang chủ</a></li>
                <li>
                    <div class="dropdown">
                        <a href="/menu" class="dropbtn">Menu</a>
                        <div class="dropdown-content">
                            <a href="#appetizer">Khai vị</a>
                            <a href="#main-course">Món chính</a>
                            <a href="#dessert">Tráng miệng</a>
                            <a href="#beverage">Đồ uống</a>
                        </div>
                    </div>
                </li>
                <li>
                    <div class="dropdown">
                        <a href="/table" class="dropbtn">Order</a>
                        <div class="dropdown-content">
                            <a href="/table#1st">Tầng 1</a>
                            <a href="/table#2nd">Tầng 2</a>
                        </div>
                    </div>
                </li>

                <li><a href="/order">Quản lý order</a></li>
            </ul>
            <button class="add_btn" onclick="openForm('add')"><strong>Thêm món</strong></button>
        </nav>



    </section>

    <!--Menu-->
    <div class="menu" id="Menu">
        <h1><span>Menu</span></h1>

        <div class="menu_box">
            <% menuItems.forEach(menuItem=> { %>
                <div class="menu_card">
                    <div class="menu_image">
                        <% if (menuItem.Image) { %>
                            <img src="uploads/<%= menuItem.Image %>">
                            <% } else { %>
                                <% if (menuItem.Category==='Đồ uống' ) { %>
                                    <img src="/images/homepages/drinkdefault.jpg">
                                    <% } else { %>
                                        <img src="/images/homepages/fooddefault.png">
                                        <% } %>
                                            <% } %>
                    </div>
                    <div class="menu_info">
                        <h2>
                            <%= menuItem.FoodName %>
                        </h2>
                        <p>
                            <% if (menuItem.Description) { %>
                                <%= menuItem.Description %>
                                    <% } else { %>
                                        ( Đang cập nhật )
                                        <% } %>
                        </p>
                        <div class="del_edit">
                            <button class="delete_btn" data-foodid="<%= menuItem.FoodID %>"
                                onclick="openForm('delete', this.dataset.foodid)">Xóa</button>
                            <button class="edit_btn" data-foodid="<%= menuItem.FoodID %>"
                                onclick="openForm('edit', this.dataset.foodid)">Sửa</button>

                        </div>
                    </div>
                </div>
                <% }); %>
        </div>
    </div>


